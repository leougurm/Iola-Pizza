generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Food {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  category    Category
  ingredients String[]
  images      String[]
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

enum Category {
  PIZZA
  BURGER
  DRINK
  DESSERT
  SIDE
}
